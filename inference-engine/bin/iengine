#!/usr/bin/env ruby

# Add lib directory to front of include path
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), *%w[.. lib])

require 'inference'

iengine = begin
  Inference::Engine.new(ARGV[0])
rescue StandardError => e
  puts "Error: #{e}"
  puts ''
  puts 'Usage:'
  puts ' iengine <ALG> [file]'
  puts ''
  puts "Valid values for <ALG> are: #{Inference::Engine::ALGS.keys.join(', ')}"
  puts ''
  puts '[file] is an optional path to an input file. Default is to read from STDIN.'
  exit
end

input = if ARGV[1]
  File.foreach(ARGV[1])
else
  STDIN
end

input.each do |line|
  iengine.parse(line).each { |result| puts result if result }
#rescue StandardError => e
#  puts e
end
