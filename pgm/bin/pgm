#!/usr/bin/env ruby

# Add lib directory to front of include path
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), *%w[.. lib])

require 'pgm'

cpd_pollution_bad = PGM::TabularCPD.new(
  PGM::Variable.new('Pollution', 3),
  [],
  [
    [0.8],
    [0.1],
    [0.1]
  ]
)

cpd_pollution_good = PGM::TabularCPD.new(
  PGM::Variable.new('Pollution', 2),
  [],
  [
    [0.9],
    [0.1]
  ]
)

cpd_smoker = PGM::TabularCPD.new(
  PGM::Variable.new('Smoker', 2),
  [],
  [
    [0.3],
    [0.7]
  ]
)

cpd_cancer = PGM::TabularCPD.new(
  PGM::Variable.new('Cancer', 2),
  [
    PGM::Variable.new('Smoker', 2),
    PGM::Variable.new('Pollution', 2)
  ],
  [
    [0.03, 0.05, 0.001, 0.02],
    [0.97, 0.95, 0.999, 0.98]
  ]
)

model = PGM::Model.new(
  PGM::Edge.new('Pollution', 'Cancer'),
  PGM::Edge.new('Smoker', 'Cancer')
)

puts model
puts
puts "Last error: #{model.error}"
puts

[cpd_cancer, cpd_pollution_bad, cpd_smoker, cpd_pollution_good].each do |cpd|
  puts 'Adding CPD:'
  puts cpd
  model.add_cpd(cpd)
  puts
  puts 'Validating...'
  model.validate!
  puts 'OK!'
  puts
rescue PGM::Model::ModelError => e
  puts "Error: #{e.message}"
  puts
end

puts model
